 ﻿ <!-- Sidebar -->
<div class="sidebar" data-background-color="dark">
    <div class="sidebar-logo">
        <!-- Logo Header -->
        <div class="logo-header" data-background-color="dark">
            <a href="#" class="logo">
                <img src="~/Layoutadmin/assets/img/kaiadmin/logo_light.svg"
                     alt="navbar brand"
                     class="navbar-brand"
                     height="20" />
            </a>
            <div class="nav-toggle">
                <button class="btn btn-toggle toggle-sidebar">
                    <i class="gg-menu-right"></i>
                </button>
                <button class="btn btn-toggle sidenav-toggler">
                    <i class="gg-menu-left"></i>
                </button>
            </div>
            <button class="topbar-toggler more">
                <i class="gg-more-vertical-alt"></i>
            </button>
        </div>
        <!-- End Logo Header -->
    </div>
    <div class="sidebar-wrapper scrollbar scrollbar-inner">
        <div class="sidebar-content">
            <ul class="nav nav-secondary">
                <li class="nav-item active">
                    <a href="@Url.Action("Index", "Home", new { area = "Admin" })" class="nav-link">
                        <i class="fas fa-home"></i>
                        <p>Dashboard</p>
                        <span class="caret"></span>
                    </a>
                </li>
                <li class="nav-section">
                    <span class="sidebar-mini-icon">
                        <i class="fa fa-ellipsis-h"></i>
                    </span>
                    <h4 class="text-section">Danh sách chức năng</h4>
                </li>
                <!--Bắt đầu danh mục sản phẩm-->
                <li class="nav-item">
                    <a data-bs-toggle="collapse" href="#base">
                        <i class="fas fa-layer-group"></i>
                        <p>Quản lý sản phẩm</p>
                        <span class="caret"></span>
                    </a>
                    <div class="collapse" id="base">
                        <ul class="nav nav-collapse">
                            <li>
                                <a href="@Url.Action("Index", "DanhMucSanPham", new { area = "Admin" })" 
                                   
                                    <span class="sub-item">Danh Mục Sản Phẩm</span>
                                </a>

                            </li>
                            <li>
                                <a href="@Url.Action("Index", "ProductManager", new { area = "Admin" })"

                                    <span class="sub-item">Quản lý sản phẩm</span>
                                </a>

                            </li>
                           
                           
                        </ul>
                    </div>              
                </li>
                <!--Kết thúc danh mục sản phẩm-->

                <!--Bắt đầu đơn hàng-->
                <li class="nav-item">
                    <a data-bs-toggle="collapse" href="#sidebarLayouts">
                        <i class="fas fa-th-list"></i>
                        <p>Đơn hàng</p>
                        <span class="caret"></span>
                    </a>
                    <div class="collapse" id="sidebarLayouts">
                        <ul class="nav nav-collapse">
                            <li>
                                @Html.ActionLink("Đơn Hàng", "Index", "Orders", new { area = "Admin" }, new { @class = "nav-link text-dark sub-item" })
                            </li>
                        </ul>
                    </div>
                </li>
                <!--Kết thúc đơn hàng-->

                <!--Bắt đầu doanh thu-->
                <li class="nav-item">
                    <a data-bs-toggle="collapse" href="#forms">
                        <i class="fas fa-pen-square"></i>
                        <p>Doanh thu</p>
                        <span class="caret"></span>
                    </a>
                    <div class="collapse" id="forms">
                        <ul class="nav nav-collapse">
                            <li>
                                @Html.ActionLink("Báo cáo doanh thu", "Index", "Statistical", new { area = "Admin" }, new { @class = "nav-link text-dark sub-item" })
                            </li>
                        </ul>
                    </div>
                </li>
                <!--Kết thúc doanh thu-->

                <!--Bắt đầu bài viết-->
                <li class="nav-item">
                    <a data-bs-toggle="collapse" href="#tables">
                        <i class="fas fa-table"></i>
                        <p>Bài viết</p>
                        <span class="caret"></span>
                    </a>
                    <div class="collapse" id="tables">
                        <ul class="nav nav-collapse">
                            <li>
                                @Html.ActionLink("Quản Lý Bài Viết ", "Index", "Posts", new { area = "Admin" }, new { @class = "nav-link text-dark sub-item" })
                            </li>
                            <li>
                                @Html.ActionLink("Thêm bài viết", "CreatePost", "Posts", new { area = "Admin" }, new { @class = "nav-link text-dark sub-item" })
                            </li>
                        </ul>
                    </div>
                </li>
                <!--Kết thúc bài viết-->
                <!--Bắt đầu quản lý tài khoản-->
                <li class="nav-item">
                    <a data-bs-toggle="collapse" href="#maps">
                        <i class="fa-regular fa-user"></i>
                        <p>Quản lý tải khoản</p>
                        <span class="caret"></span>
                    </a>
                    <div class="collapse" id="maps">
                        <ul class="nav nav-collapse">
                            <li>
                                <a href="@Url.Action("Index", "UserManager")">
                                    <span class="sub-item">Danh sách tài khoản</span>
                                </a>
                            </li>

                        </ul>
                    </div>
                </li>
                <!--Kết thúc quản lý tài khoản-->
