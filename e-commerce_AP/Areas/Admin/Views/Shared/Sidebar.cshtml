                    <a href="@Url.Action("Index", "Subscribes")">
                        <i class="fa-regular fa-user"></i>
                        <p>Danh sách người dùng đăng ký bản tin</p>
                        <span class="caret"></span>
                    </a>
                </li>
                <!--Kết thúc quản lý danh sách người dùng đăng ký tham gia khuyến mãi-->
                <li class="nav-item">
                    <a href="/LoginAdmin" class="nav-link">
                        <i class="fa-solid fa-right-from-bracket"></i>
                        <p>Đăng xuất</p>
                    </a>
                </li>
              
            </ul>
        </div>
    </div>
</div>
<!-- End Sidebar -->
