@model e_commerce_AP.Models.EF.TbProduct
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Sửa sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Sửa sản phẩm</h1>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-controller="ProductManager" asp-action="EditProduct" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- ID (ẩn vì không cần nhập) -->
            <input asp-for="Id" type="hidden" />

            <!-- Title -->
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" required />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <!-- Product Code -->
            <div class="form-group">
                <label asp-for="ProductCode" class="control-label"></label>
                <input asp-for="ProductCode" class="form-control" />
                <span asp-validation-for="ProductCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductCategoryId" class="control-label">Danh mục sản phẩm</label>
                <select asp-for="ProductCategoryId" class="form-control" asp-items="@(new SelectList(ViewBag.ProductCategories, "Id", "Title"))">
                    <option value="">-- Chọn danh mục --</option>
                </select>
                <span asp-validation-for="ProductCategoryId" class="text-danger"></span>
            </div>
            <!-- Description -->
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Detail -->
            <div class="form-group">
                <label asp-for="Detail" class="control-label"></label>
                <textarea asp-for="Detail" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Detail" class="text-danger"></span>
            </div>

            <!-- Image -->
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" type="file" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <!-- Price -->
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" type="number" step="0.01" required />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <!-- Price Sale -->
            <div class="form-group">
                <label asp-for="PriceSale" class="control-label"></label>
                <input asp-for="PriceSale" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="PriceSale" class="text-danger"></span>
            </div>

            <!-- Quantity -->
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" type="number" required />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsHome" /> @Html.DisplayNameFor(model => model.IsHome)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsSale" /> @Html.DisplayNameFor(model => model.IsSale)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsFeature" /> @Html.DisplayNameFor(model => model.IsFeature)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsHot" /> @Html.DisplayNameFor(model => model.IsHot)
                </label>
            </div>

            <!-- SeoTitle -->
            <div class="form-group">
                <label asp-for="SeoTitle" class="control-label"></label>
                <input asp-for="SeoTitle" class="form-control" />
                <span asp-validation-for="SeoTitle" class="text-danger"></span>
            </div>

            <!-- SeoDescription -->
            <div class="form-group">
                <label asp-for="SeoDescription" class="control-label"></label>
                <input asp-for="SeoDescription" class="form-control" />
                <span asp-validation-for="SeoDescription" class="text-danger"></span>
            </div>

            <!-- SeoKeywords -->
            <div class="form-group">
                <label asp-for="SeoKeywords" class="control-label"></label>
                <input asp-for="SeoKeywords" class="form-control" />
                <span asp-validation-for="SeoKeywords" class="text-danger"></span>
            </div>

            <!-- Alias -->
            <div class="form-group">
                <label asp-for="Alias" class="control-label"></label>
                <input asp-for="Alias" class="form-control" />
                <span asp-validation-for="Alias" class="text-danger"></span>
            </div>

            <!-- View Count -->
            <div class="form-group">

                <label asp-for="ViewCount" class="control-label"></label>
                <input asp-for="ViewCount" class="form-control" type="number" />
                <span asp-validation-for="ViewCount" class="text-danger"></span>
            </div>

            <!-- Original Price -->
            <div class="form-group">
                <label asp-for="OriginalPrice" class="control-label"></label>
                <input asp-for="OriginalPrice" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="OriginalPrice" class="text-danger"></span>
            </div>

            <!-- CreatedBy (ẩn vì không cần nhập, lấy tự động từ thông tin người dùng) -->
            <input type="hidden" asp-for="CreatedBy" value="@User.Identity.Name" />

            <!-- Submit button -->
            <div class="form-group">
                <input type="submit" value="Tạo sản phẩm" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay lại danh sách</a>
</div>

<!-- Script and styling -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}