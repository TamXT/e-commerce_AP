@model IEnumerable<e_commerce_AP.Models.EF.TbProductCategory>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Danh Mục Sản Phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="d-flex align-items-center">
                    <h4 class="card-title">Thêm Danh Mục Sản Phẩm</h4>
                    <a asp-action="Create" style="padding :10px ">
                        <button class="btn btn-primary btn-round ms-auto" data-bs-toggle="modal" data-bs-target="#addRowModal">
                            <i class="fa fa-plus" asp-action="Create">   </i>
                            Thêm
                        </button>
                    </a>
                    
                    <p>@TempData["Message"]</p>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="add-row" class="display table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Seo Title</th>
                                <th>Seo Description</th>
                                <th>Keywords</th>
                                <th>Created By</th>
                                <th>Created Date</th>
                                <th>Modified Date</th>
                                <th>Modified By</th>
                                <th>Alias</th>
                                <th style="width: 10%">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model)
                            {
                                <tr>
                                    <td>@product.Title</td>
                                    <td>@product.Description</td>
                                    <td>@product.SeoTitle</td>
                                    <td>@product.SeoDescription</td>
                                    <td>@product.SeoKeywords</td>
                                    <td>@product.CreatedBy</td>
                                    <td>@product.CreatedDate.ToString("g")</td>
                                    <td>@product.ModifiedDate.ToString("g")</td>
                                    <td>@product.Modifiedby</td>
                                    <td>@product.Alias</td>
                                    <td>
                                        <button asp-action="SuaSanPham" asp-route-id="@product.Id" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#editRowModal" style="padding:10px">
                                            
                                                <a asp-action="SuaSanPham" asp-route-id="@product.Id" > edit</a>
                                               
                                            
                                        </button>
                                        <button asp-action="Delete" asp-route-id="@product.Id" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#editRowModal" style="padding:10px">
                                            
                                                <a asp-action="Delete" asp-route-id="@product.Id"> Xóa</a>

                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
