@model IEnumerable<e_commerce_AP.Models.EF.TbPost>


<section class="from-blog spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title from-blog__title">
                    <h2>From The Blog</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var post in Model.Take(4))
            {
                <div class="col-lg-3 col-md-3 col-sm-5">
                    <div class="blog__item">
                        <div class="blog__item__pic">
                            <img src="@Url.Content(post.Image)" alt="@post.Title">
                        </div>
                        <div class="blog__item__text">
                            <ul>
                                <li><i class="fa fa-calendar-o"></i> @post.CreatedDate</li>
                                <li><i class="fa fa-comment-o"></i> @post.CreatedBy</li>
                            </ul>
                            <h5><a href="@Url.Action("Details" , "Blog", new { id = post.Id })">@post.Title</a></h5>
                            <p>@post.Description</p>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</section>