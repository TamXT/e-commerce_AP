<!-- Humberger Begin -->
<div class="humberger__menu__overlay"></div>
<div class="humberger__menu__wrapper">
    <div class="humberger__menu__logo">
        <a asp-action="Index" asp-controller="Home"><img src="~/images/logo1.png" alt=""></a>
    </div>
    <div class="humberger__menu__cart">
        <ul>
            <li><a href="#"><i class="fa fa-heart"></i> <span>1</span></a></li>
            <li><a href="#"><i class="fa fa-shopping-bag"></i> <span>3</span></a></li>
        </ul>
        <div class="header__cart__price">item: <span>$150.00</span></div>
    </div>
    <div class="humberger__menu__widget">
        <div class="header__top__right__auth">
            <a href="#"><i class="fa fa-user"></i> Login</a>
        </div>
    </div>
    <nav class="humberger__menu__nav mobile-menu">
        <ul>
            <li class="active"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li>
                <a asp-action="Index" asp-controller="Shop">Shop</a>
                <ul class="header__menu__dropdown">
                    <li><a asp-action="Index" asp-controller="Shop">Shop</a></li>
                    <li><a asp-action="Index" asp-controller="Cart">Cart</a></li>
                    <li><a asp-action="Checkout" asp-controller="Cart">Check Out</a></li>
                </ul>
            </li>
            <li>
                <a href="#">Pages</a>

            </li>
            <li>
                <a asp-action="Index" asp-controller="Blog">Blog</a>
            </li>

            <li><a asp-action="Index" asp-controller="Contact">Contact</a></li>
        </ul>
    </nav>
    <div id="mobile-menu-wrap"></div>
    <div class="humberger__menu__contact">
        <ul>
            <li><i class="fa fa-envelope"></i> hello@colorlib.com</li>
            <li>Free Shipping for all Order of $99</li>
        </ul>
    </div>
</div>
<!-- Humberger End -->
<!-- Header Section Begin -->
<header class="header">
    <div class="header__top">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6">
                    <div class="header__top__left">
                        <ul>
                            <li><i class="fa fa-envelope"></i> hello@colorlib.com</li>
                            <li>Free Shipping for all Order of $99</li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6">
                    <div class="header__top__right">
                        <div class="header__top__right__auth">
                            <a asp-action="Login" asp-controller="Account"><i class="fa fa-user"></i> Login</a>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="header__logo">
                    <a asp-action="Index" asp-controller="Home"><img src="~/images/logo1.png" alt=""></a>
                </div>
            </div>
            <div class="col-lg-6">
                <nav class="header__menu">
                    <ul>
                        <li class="active"><a asp-action="Index" asp-controller="Home">Home</a></li>
                        <li>
                            <a asp-action="Index" asp-controller="Shop">Shop</a>
                            <ul class="header__menu__dropdown">
                                <li><a asp-action="Index" asp-controller="Shop">Shop</a></li>
                                <li><a asp-action="Index" asp-controller="Cart">Cart</a></li>
                                <li><a asp-action="Checkout" asp-controller="Cart">Check Out</a></li>
                            </ul>
                        </li>
                        <li>
                            <a href="#">Pages</a>

                        </li>
                        <li>
                            <a asp-action="Index" asp-controller="Blog">Blog</a>
                        </li>

                        <li><a asp-action="Index" asp-controller="Contact">Contact</a></li>
                    </ul>
                </nav>
            </div>
            <div class="col-lg-3">
                <div class="header__cart">
                    <ul>
                        <li><a href="#"><i class="fa fa-heart"></i> <span>1</span></a></li>
                        <li><a asp-action="Index" asp-controller="Cart"><i class="fa fa-shopping-bag"></i> <span>@ViewBag.CartItemCount</span></a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="humberger__open">
            <i class="fa fa-bars"></i>
        </div>
    </div>
</header>
<!-- Header Section End -->