@model IEnumerable<e_commerce_AP.Models.EF.TbProduct>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
﻿@{
    ViewData["Title"] = "Home Page";
}
<!-- Hero Section Begin -->
@Html.Partial("~/Views/Shared/Partials/_Slider.cshtml")

<!-- Hero Section End -->

<!-- Categories Section Begin -->
<section class="categories">
    <div class="container">
        <div class="row">
            <div class="categories__slider owl-carousel">
                @foreach (var category in Model)
                {
                    <div class="col-lg-3">
                        <div class="categories__item set-bg" data-setbg="@Url.Content(category.ProductCategory.Icon)">
                            <h5><a asp-action="Index" asp-controller="Category" asp-route-SeoTitle="@category.SeoTitle">@category.ProductCategory.Title</a></h5>
                        </div>
                    </div>
                }
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Categories Section End -->

<!-- Featured Section Begin -->
<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Featured Product</h2>
                </div>
                <div class="featured__controls">
                    <ul>
                        <li class="active" data-filter="*">All</li>
                        <li data-filter=".oranges">Oranges</li>
                        <li data-filter=".fresh-meat">Fresh Meat</li>
                        <li data-filter=".vegetables">Vegetables</li>
                        <li data-filter=".fastfood">Fastfood</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row featured__filter">
            @foreach (var product in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
                    <div class="featured__item">
                        <div class="featured__item__pic set-bg" data-setbg="@Url.Content(product.Image)">
                            <ul class="featured__item__pic__hover">
                                <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                                <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
                            </ul>
                        </div>
                        <div class="featured__item__text">
                            <h6><a href="@Url.Action("Index" , "ProductDetails", new { id = product.Id })">@product.Title</a></h6>
                            <h5>@product.Price.ToString("C0")</h5>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- Featured Section End -->

