
@{
    ViewData["Title"] = "Reset Passsword";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
@model ResetPasswordViewModel


<section class="sign-in">
    <div class="container">
        <div class="signin-content">
            <div class="signin-image">
                <figure><img src="~/images/signin-image.jpg" alt="sing up image"></figure>
                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">I am already member</a>

            </div>

            <div class="signin-form">
                <h2 class="form-title">Reset Password</h2>
                <form asp-action="ResetPassword">
                    <div class="form-group">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Token" />
                    </div>
                    <div class="form-group">
                            <label class="control-label"><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input asp-for="Email" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                            <label class="control-label"> <i class="zmdi zmdi-lock"></i></label>
                        <input asp-for="Password" class="form-control" placeholder="Password" />
                    </div>

                    <div class="form-group">
                            <label class="control-label"> <i class="zmdi zmdi-lock"></i></label>
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="ConfirmPassword" />
                    </div>

                    <div class="form-group form-button">
                        <input type="submit" value="Login" class="form-submit" />
                    </div>
                </form>
                <div class="social-login">
                    <span class="social-label">Or login with</span>
                    <ul class="socials">
                        <li><a href="#"><i class="display-flex-center zmdi zmdi-facebook"></i></a></li>
                        <li><a href="#"><i class="display-flex-center zmdi zmdi-twitter"></i></a></li>
                        <li><a href="#"><i class="display-flex-center zmdi zmdi-google"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
