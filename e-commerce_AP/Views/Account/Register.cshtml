@model RegisterViewModel
@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<!-- Breadcrumb -->
<section class="section-breadcrumb margin-b-50">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="row bb-breadcrumb-inner">
                    <div class="col-md-6 col-sm-12">
                        <h2 class="bb-breadcrumb-title">Register</h2>
                    </div>
                    <div class="col-md-6 col-sm-12">
                        <ul class="bb-breadcrumb-list">
                            <li class="bb-breadcrumb-item"><a href="index-2.html">Home</a></li>
                            <li><i class="ri-arrow-right-double-fill"></i></li>
                            <li class="bb-breadcrumb-item active">Register</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Register -->
<section class="section-register padding-tb-50">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="bb-register" data-aos="fade-up" data-aos-duration="1000" data-aos-delay="200">
                    <div class="row">
                        <div class="col-12">
                            <div class="section-title bb-center">
                                <div class="section-detail">
                                    <h2 class="bb-title">Register</h2>
                                    <p>Best place to buy and sell digital products</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <form asp-action="Register" method="POST" class="register-form" id="register-form">
                                <div class="bb-register-wrap bb-register-width-50">
                                    <label>First Name *</label>
                                    <input type="text" asp-for="UserName" placeholder="Your Name" required>
                                </div>
                                <div class="bb-register-wrap bb-register-width-50">
                                    <label>Email*</label>
                                    <input type="text" asp-for="Email" placeholder="Your Email" required>
                                </div>
                                <div class="bb-register-wrap bb-register-width-50">
                                    <label>Email*</label>
                                    <input type="password" asp-for="Password" placeholder="Password" required>
                                </div>
                                <div class="bb-register-wrap bb-register-width-50">
                                    <label>ConfirmPassword*</label>
                                    <input type="password" asp-for="ConfirmPassword" placeholder="Repeat your password" required>
                                </div>   
                                <div class="bb-register-wrap bb-register-width-100">
                                    <a class="nav-link text-dark text-decoration-underline" asp-area="" asp-controller="Account" asp-action="Login">I am already member</a>
                                </div>
                                <div class="bb-register-button">
                                    <button type="submit" name="signup" id="signup" value="Register" class="bb-btn-2">Register</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Hiển thị các lỗi từ ModelState -->
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<!-- Bao gồm các validation scripts -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}