@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<!-- Sign up form -->
<section class="signup">
    <div class="container">
        <div class="signup-content">
            <div class="signup-form">
                <h2 class="form-title">Forgot Password</h2>

                <p>If your email is registered, a reset password link has been sent to your email.</p>

                <p>Check your inbox for further instructions on how to reset your password.</p>
                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Back</a>
            </div>
            <div class="signup-image">
                <figure><img src="~/images/signup-image.jpg" alt="sign up image"></figure>
            </div>
        </div>
    </div>
</section>
